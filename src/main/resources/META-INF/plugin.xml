<idea-plugin>
    <id>com.jonnyzzz.intellij.hot-reload</id>
    <name>Plugin Hot Reload</name>
    <vendor>jonnyzzz.com</vendor>

    <description><![CDATA[
    Provides an HTTP REST endpoint for plugin hot reload functionality.
    Creates a marker file under user home directory for process discovery.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- HTTP REST API endpoint -->
        <httpRequestHandler
            implementation="com.jonnyzzz.intellij.hotreload.HotReloadHttpHandler"/>

        <!-- Startup activity to initialize marker service -->
        <postStartupActivity
            implementation="com.jonnyzzz.intellij.hotreload.HotReloadStartupActivity"/>

        <!-- Notification group for hot reload progress -->
        <notificationGroup
            id="Plugin Hot Reload"
            displayType="BALLOON"/>
    </extensions>

</idea-plugin>
